	$(&quot;#userchoose_treeWapper&quot;).attr('id','userchoose'+r+'_treeWapper');
	$(&quot;#userchoose_tree&quot;).attr('id','userchoose_tree'+r);
	$(&quot;span[ng-show='!$stats.userchoose.text']&quot;).attr('ng-show','!$stats.userchoose'+r+'.text');
	$(&quot;span[ng-show='$stats.userchoose.text']&quot;).attr('ng-show','$stats.userchoose'+r+'.text');*/
