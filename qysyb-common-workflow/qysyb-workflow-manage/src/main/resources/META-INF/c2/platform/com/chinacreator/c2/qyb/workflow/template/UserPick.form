	var a = $view.userchoose_treeWapper.getZtree();
	console.log(&quot;ztree&quot;,a);
	$(&quot;input[ng-model='userchoose_treeWapper_searchStr']&quot;).attr('ng-model','userchoose'+r+'_treeWapper_searchStr');
